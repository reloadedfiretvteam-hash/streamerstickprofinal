# =====================================================
# STREAMSTICKPRO ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# For Cloudflare: Add these in Dashboard → Settings → Environment Variables
# =====================================================

# =====================================================
# DATABASE (PostgreSQL - Supabase)
# =====================================================
# Get from Supabase Dashboard → Settings → Database → Connection string (URI)
# Make sure to add ?sslmode=require at the end
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres?sslmode=require

# =====================================================
# STRIPE (Payment Processing)
# =====================================================
# Get from https://dashboard.stripe.com/apikeys
# Use TEST keys for development, LIVE keys for production

# Secret key - NEVER expose this to frontend
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx

# Publishable key - safe for frontend
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx

# Webhook signing secret - Get when creating webhook endpoint
# Dashboard → Developers → Webhooks → Add endpoint → Signing secret
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# =====================================================
# RESEND (Email Service)
# =====================================================
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Your verified domain email (verify domain in Resend dashboard first)
RESEND_FROM_EMAIL=noreply@yourdomain.com

# =====================================================
# SUPABASE (Image Storage)
# =====================================================
# Get from Supabase Dashboard → Settings → API
VITE_SUPABASE_URL=https://emlqlmfzqsnqokrqvmcm.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Storage bucket name (create in Supabase → Storage)
VITE_STORAGE_BUCKET_NAME=imiges

# Service role key - NEVER expose to frontend (server-only)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =====================================================
# GITHUB (Optional - for Git operations)
# =====================================================
# Create at https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxx

# =====================================================
# APPLICATION SETTINGS
# =====================================================
# Session encryption secret (generate a random 64-character string)
SESSION_SECRET=your-random-64-character-secret-key-here

# Production URL (your custom domain)
BASE_URL=https://streamstickpro.com

# Shadow store domain (for Stripe display)
VITE_SECURE_HOSTS=secure.streamstickpro.com

# Node environment
NODE_ENV=production
