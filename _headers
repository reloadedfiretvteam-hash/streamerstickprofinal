  # Force HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Security Headers
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: no-referrer-when-downgrade

  # Permissions Policy - Enable payment for Stripe Apple Pay/Google Pay
  Permissions-Policy: payment=(self "https://js.stripe.com"), accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), usb=(), autoplay=(*)

  # Content Security Policy - Configured for Stripe Payment Element
  # Stripe requires: js.stripe.com for scripts, hooks.stripe.com for 3DS, api.stripe.com for API calls
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://static.cloudflareinsights.com https://*.cloudflare.com; style-src 'self' 'unsafe-inline' https://js.stripe.com; img-src 'self' data: https: blob: https://*.stripe.com; font-src 'self' data: https://js.stripe.com; connect-src 'self' https://api.stripe.com https://m.stripe.network https://r.stripe.com https://*.supabase.co wss://*.supabase.co; frame-src 'self' https://js.stripe.com https://hooks.stripe.com; object-src 'none'; upgrade-insecure-requests
